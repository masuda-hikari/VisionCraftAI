# VisionCraftAI - 環境変数設定テンプレート
# このファイルを .env にコピーして値を設定してください

# =============================================================================
# Google Cloud / Gemini API 設定（必須）
# =============================================================================

# Google Cloud プロジェクトID
GOOGLE_CLOUD_PROJECT=your-project-id

# Google Cloud リージョン
GOOGLE_CLOUD_LOCATION=us-central1

# サービスアカウント認証ファイルのパス
# Dockerの場合: /app/credentials/service-account.json
# ローカルの場合: ./credentials/service-account.json
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# Gemini モデル名（画像生成対応モデル）
GEMINI_MODEL_NAME=gemini-2.0-flash-exp

# 1分あたりの最大リクエスト数
GEMINI_MAX_RPM=60

# =============================================================================
# Stripe 決済設定（本番環境で必須）
# =============================================================================

# Stripe APIキー
# テストモード: sk_test_xxx
# 本番モード: sk_live_xxx
STRIPE_API_KEY=sk_test_your_stripe_test_key

# Stripe Webhookシークレット
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# テストモード（true/false）
STRIPE_TEST_MODE=true

# Stripe 価格ID（サブスクリプション用）
STRIPE_PRICE_BASIC=price_basic_monthly
STRIPE_PRICE_PRO=price_pro_monthly
STRIPE_PRICE_ENTERPRISE=price_enterprise_monthly

# =============================================================================
# 画像生成設定
# =============================================================================

# デフォルト画像サイズ
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024

# 出力フォーマット（png/jpeg/webp）
IMAGE_FORMAT=png

# JPEG/WebP品質（1-100）
IMAGE_QUALITY=95

# 出力ディレクトリ
OUTPUT_DIR=outputs

# =============================================================================
# アプリケーション設定
# =============================================================================

# デバッグモード（true/false）
# 本番環境では必ず false に設定
DEBUG=false

# ログレベル（DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO

# アプリケーションポート
APP_PORT=8000

# =============================================================================
# CORS設定
# =============================================================================

# 許可するオリジン（カンマ区切り）
# 本番環境では適切なドメインに制限すること
# 例: https://example.com,https://www.example.com
ALLOWED_ORIGINS=*

# =============================================================================
# Docker設定
# =============================================================================

# Google認証情報ファイルのホストパス
GOOGLE_CREDENTIALS_PATH=./credentials
